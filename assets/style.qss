QComboBox:on {
    padding-top: 3px;
    padding-left: 4px;
}

QPushButton {
    background-color: #3b4541;
    border: 1px solid #5a5a5a;
    border-radius: 4px;
    padding: 3px 10px;
    font-size: 14px;
    color: #ffffff;
}

QPushButton:hover {
    cursor: pointer;
    background-color: #111111;
}

QPushButton:pressed {
    background-color: #2a5d91;
}



