QWidget {
    background-color: #2e2e2e;
    color: #ffffff;
    font-family: "Segue UI", "Roboto", sans-serif;
    font-size: 14px;
}

QWidget#configuration_container{
    background-color: #333333;
    border-radius: 8px;
    padding: 12px;
}

#config_btn{
    background: none;
    border: 2px solid #8d9491;
    cursor: pointer;
    border-radius: 8px;
    padding: 10px;
}

#config_btn:hover{
    background-color: #8d9491;
}

QWidget#configuration_container QLabel{
    background: None;
}

QLabel {
    font-size: 15px;
    color: #ffffff;
}



#mainLabel {
    font-size: 18px;
    color: #2c3e50;
    margin: 10px;
}
#file_button {
    background-color: #8d9491;
    color: white;
    padding: 4px;
    border: none;
    border-radius: 8px;
    font-weight: bold;
    font-size: 15px;
}

#file_button:hover {
    background-color: #779491;
}

#file_button:pressed {
    background-color: #3f7dc1;
}

#info_label{
    color: #ffffff;
    font-family: "Segue UI", "Roboto", sans-serif;
    font-size: 14px;
}

QLineEdit, QComboBox {
    background-color: #3e3e3e;
    border: 1px solid #5a5a5a;
    border-radius: 4px;
    padding: 3px 10px;
    font-size: 14px;
    color: #ffffff;
}

QLineEdit:focus,
QComboBox:focus {
    border: 1px solid #4a90e2;
}

QComboBox QAbstractItemView {
    background-color: #3e3e3e;
    selection-background-color: #5a9bd8;
    #color: #ffffff;
}


QComboBox QAbstractItemView::item {
    min-height: 32px;
    padding: 6px 10px;
}

QComboBox QAbstractItemView::item:hover {
    background-color: #5aa2eb;
    color: #ffffff;
    border-left: 4px solid #1e78c2;
    margin-left: -4px;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 40px;
    border-left: 1px solid #5a5a5a;
}

